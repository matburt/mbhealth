# Production Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# Production Security (MUST be changed from default)
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_32_PLUS_CHARACTER_SECRET_KEY
DATABASE_URL=postgresql://user:password@localhost/mbhealth

# Production Redis
REDIS_URL=redis://redis:6379/0

# Production CORS - restrict to your domain
BACKEND_CORS_ORIGINS=https://yourdomain.com

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_NOTIFICATIONS=true
ENABLE_WORKFLOWS=true

# Timezone
DEFAULT_TIMEZONE=America/New_York

# WebSocket
WEBSOCKET_URL=wss://yourdomain.com/ws